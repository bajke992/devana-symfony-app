{% block body %}
    <div id="root" style="width: 280px; margin: 40px auto; padding: 10px; border-style: dashed; border-width: 1px;">
        embeded area
    </div>
    <script src="https://cdn.auth0.com/js/lock-7.9.min.js"></script>
    <script>
        var lock = new Auth0Lock('ycNsviioFNUE9XXTZJhAJwKw3XBBNFER', 'devana-symfony-app.eu.auth0.com');
        lock.show({
            container: 'root',
            callbackURL: 'http://localhost:8000/auth0/callback',
            responseType: 'code',
            authParams: {
                scope: 'openid profile'
            }
        });
    </script>
{% endblock %}